<Window x:Class="SlimeSim.Gui.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlimeSim.Gui"
        mc:Ignorable="d"
        Title="PredPreySim details" 
        Width="400"
        Height="400"  
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="False"
        Opacity="1">
    <Border Background="#CC2B2B2B"
            CornerRadius="5"
            BorderBrush="#444"
            BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Configuration" 
                           Name="titleText"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="─"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="minimizeButton"
                        Cursor="Hand"/>

            </Grid>

            <!-- Window Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Name="saveButton" Grid.Row="0" Grid.Column="0">Save</Button>
                <Button Name="loadButton" Grid.Row="0" Grid.Column="1">Load</Button>
                <Button Name="newButton" Grid.Row="0" Grid.Column="2">New</Button>

                <!-- row below graph -->
                <ComboBox Name="navigationCombo" Grid.Row="1" Grid.Column="0">
                    <ComboBoxItem Tag="0" IsSelected="True">Free mouse navigation</ComboBoxItem>
                    <ComboBoxItem Tag="1">Follow green</ComboBoxItem>
                    <ComboBoxItem Tag="2">Follow blue</ComboBoxItem>
                    <ComboBoxItem Tag="2">Follow red</ComboBoxItem>
                </ComboBox>
                <CheckBox Name="pointersCheckbox" Grid.Row="1" Grid.Column="1" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Show pointers</CheckBox>

                <ToggleButton Name="recordButton" Grid.Row="1" Grid.Column="2" ToolTip="Record frames as PNG files to given folder">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <!-- Default: red circle -->
                                    <Ellipse Width="12"
                             Height="12"
                             Fill="Red"/>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <!-- When recording -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <!-- Stop: black square -->
                                            <Rectangle Width="12"
                                       Height="12"
                                       Fill="Black"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

            </Grid>
        </DockPanel>
    </Border>
</Window>
